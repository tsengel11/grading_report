<h1>Grading Report</h1>
<p>{{texttodisplay}}</p>


<div class="dropdown show">
  <input type="button" class="btn btn-primary" value="Back" onclick="location.href='https://moodle.libertycollege.edu.au/'">
  <a class="custom-select" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Select Groups
  </a>

    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        {{#cohorts}}
          {{{drop_downitem}}}
        {{/cohorts}}
    </div>
    <th>
    <div><b>Group Name : </b>{{groupname}}</div>
    <div><b>Total number of students : </b>{{studentnumber}}</div>
     
</div>

<div class="container-fluid">
  <div class="row">
  </div>
			
    <div class="scrolling-wrapper row flex-row flex-nowrap mt-2 pb-4 pt-2" style="overflow-x:auto">
    
    <div class="col-4 p-0"  style = "position:sticky  ; left: 0 ;z-index: 4;">
          <div class="card card-block" >
              <div class="border font-weight-bold text-center" style="height:50px">Student name</div>
              <div class="border " style="height:25px">Start Date</div>
              <div class="border" style="height:25px">End Date</div>
              <div class="border" style="height:25px">Student ID</div>
              <div class="border" style="height:25px">Student Email</div>
              <div class="border" style="height:25px">Schedule</div>
              <div class="border" style="height:25px">Term 1</div>
              <div class="border font-weight-bold" style="height:25px"><a href="https://moodle.libertycollege.edu.au/course/view.php?id=289">CPCCWHS1001: Prepare to work safely in the construction industry</a></div>
              <div class="border font-weight-bold" style="height:25px"><a href="https://moodle.libertycollege.edu.au/course/view.php?id=844">CPCCWHS2001: Apply WHS requirements, policies and procedures...</a></div>
              <div class="border font-weight-bold" style="height:25px"><a href="https://moodle.libertycollege.edu.au/course/view.php?id=836">CPCCOM1013: Plan and organise work</a></div>
          </div>
    </div>
		{{#users}}
    <div class="col-3 p-0 text-center">
    <div class="card card-block" >
        <div class="card flex-nowrap border text-center" style="height:50px">{{{userlink}}}</div>
        <div class="card flex-nowrap border text-center"style="height:25px">{{startdate}}</div>
        <div class="card flex-nowrap border text-center"style="height:25px">{{enddate}}</div>
        <div class="card flex-nowrap border text-center"style="height:25px">{{studentid}}</div>
        <div class="card flex-nowrap border text-center"style="height:25px">{{email}}</div>
        <div class="card flex-nowrap border"style="height:25px">&nbsp</div>
        <div class="card flex-nowrap border"style="height:25px">&nbsp</div>
        <div class="card flex-nowrap border"style="height:25px">{{{cpccwhs1001}}}</div>
        <div class="card flex-nowrap border"style="height:25px">{{{cpccwhs2001}}}</div>
        <div class="card flex-nowrap border"style="height:25px">{{{CPCCOM1013}}}</div>

        </div>
		</div>
    {{/users}}
    </div>
</div>


